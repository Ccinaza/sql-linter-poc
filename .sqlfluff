[sqlfluff]
dialect = ansi
max_line_length = 80

[sqlfluff:rules]
[sqlfluff:rules:capitalisation]
keywords = lower

[sqlfluff:rules:layout]
indent = 2
trailing_whitespace = disallow
comma_style = trailing

[sqlfluff:rules:aliasing]
table = explicit

[sqlfluff:rules:convention]
implicit_string_concat = disallow